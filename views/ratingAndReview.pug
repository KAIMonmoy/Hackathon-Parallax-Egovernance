      .hidden {
      display: none;
      }
      a {
      position: absolute;
      font-family: Arial, Helvetica, sans-serif;
      bottom: 6px;
      margin-left: -44px;
      color: #fff;
      background: #aaa;
      transition: .5s;
      text-decoration: none;
      background: #292929d1;
      padding: 8px 8px;
      border-radius: 6px;
      }
      input:checked a {
      font-size: 200px;
      }
      @keyframes rollback {
      100% {
      transform: rotate(-360deg);
      }
      }
      @keyframes rotate {
      50% {
      transform: rotate(50deg);
      }
      70% {
      transform: rotate(-50deg);
      }
